[advice]
	addIgnoredFile = false
[alias]
        st = status
        ci = commit
        co = checkout
        #up = remote update --prune
        de = describe --all
        l  = log --stat --decorate
        lc = log ORIG_HEAD.. --stat --no-merges --decorate
        lg = log --oneline --decorate
        dc = diff --cached
        diffc = diff --color-words
        changes  = diff --name-status -r
        diffstat = diff --stat -r
        rv = remote -v
[branch]
        autosetuprebase = always
        sort = -committerdate    # Sort branches by most recent commit first
[clean]
        requireForce = true
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
        ui = auto
[color "diff"]
        commit = blue
[commit]
        verbose = true           # Include diff comment in commit message template
[column]
        ui = auto                            # Output in columns when possible
[core]
        fsync = all
        preloadindex = true
        excludesfile = ~/.gitignore_global
[diff]
        algorithm = histogram    # Clearer diffs on moved/edited lines
        colorMoved = plain       # Highlight moved blocks in diffs
        mnemonicPrefix = true    # More intuitive refs in diff output
        renames = copy
[gc]
        pruneexpire = 30 days
[github]
        user = sudish
[gui]
        pruneduringfetch = true
[init]
	defaultBranch = master
[merge]
        stat = true
        log = true
        verbosity = 2
        conflictstyle = diff3
[pack]
        threads = 0
[push]
        default = current
        autoSetupRemote = true   # Automatically set upstream branch on push
[tag]
        sort = -version:refname  # Sort version numbers as you would expect
[ui]
        color = true
[user]
        name = Sudish Joseph
        email = sudish@gmail.com
